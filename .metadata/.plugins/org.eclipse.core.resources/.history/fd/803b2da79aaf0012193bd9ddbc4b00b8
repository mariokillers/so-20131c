#ifndef MENSAJES_H_
#define MENSAJES_H_
#include <unistd.h>

typedef struct _Connection {
	char client [20];
	int client_FD;
	struct sockaddr client_addr;
	socklen_t in_len;
} Connection;

typedef struct {
	int from;			//fileDescriptor de la conexion
	char type;
	uint16_t lenght;
	void* data;
} Mensaje;

#endif /* MENSAJES_H_ */
